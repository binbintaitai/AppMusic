<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:padding="5dp"
            android:text="Tên bài hát"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/prevbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="63dp"
            android:layout_marginBottom="25dp"
            android:background="@null"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:src="@drawable/prev"
            app:tint="#fff" />

        <ImageButton
            android:id="@+id/playbtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="145dp"
            android:layout_marginLeft="145dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_img"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:src="@drawable/play"
            app:tint="#fff" />

        <ImageButton
            android:id="@+id/btnloop"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="224dp"
            android:layout_marginLeft="224dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_img"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:src="@drawable/reload"
            app:tint="#fff" />

        <ImageButton
            android:id="@+id/nextbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="306dp"
            android:layout_marginLeft="306dp"
            android:layout_marginBottom="25dp"
            android:background="@null"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:src="@drawable/next"
            app:tint="#fff" />

        <SeekBar
            android:id="@+id/seekbarTime"
            android:outlineSpotShadowColor="#fff"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="109dp"
            android:thumb="@drawable/thumb"/>

        <TextView
            android:id="@+id/TextViewTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="131dp"
            android:text="00:00"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TextViewTimeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="349dp"
            android:layout_marginLeft="349dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="131dp"
            android:text="00:00"
            android:textColor="#fff"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewDvd"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="50dp"
            android:background="@null"
            />
</RelativeLayout>